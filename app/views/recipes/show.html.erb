	<h2><%= @recipe.name %> Recipe </h2>
	
	<!-- recipe image -->
	<%= image_tag @recipe.image.medium.url.to_s %>
	<br>
	<strong>posted at</strong>
	
	<!-- recipe descriptions -->
	
		<p>Description:
			<%= @recipe.description %>
		</p>
		<p> Ingredients:
			<%= @recipe.ingredients %>
		</p>
		<p> Instructions:
			<%= @recipe.instructions %>
		</p>
	
</div>