 <h1>Homepage for recipes</h1>

<!-- flashes welcome user notice -->
<% if flash[:success] %>
  <%= flash[:success] %>
<% end %>

<div class="container-fluid">
	<div class="jumbotron">
		<%= link_to 'New Recipe', new_recipe_path %>
		<table>
			<tr>
				<th>Title</th>
				<th></th>
			</tr>

			<% @recipe.each do |recipe| %>
				<tr>
					<%= recipe.name %>
					<%= recipe.description %>
							

				</tr>

			<% end %>

		</table>
	</div>
</div>

